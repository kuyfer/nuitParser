$( document ).ready(function(){
  setTimeout(function(){
    
    //Add "On this page" to the TOC
    if ($("div.js-tocBot").children().length > 0){
      $("div.js-tocBot").prepend('<h4>On this page</h4>');
    }
    
     //Add "Related pages" to the LabelByContent
    if ($("div.js-contentByLabel").children().length > 0){
      $("div.js-contentByLabel").prepend('<h4>Related pages</h4>');
    }
    
  }, 100);});